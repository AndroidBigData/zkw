<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/kctj_item_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/xcg_ic" />

        <TextView
            android:id="@+id/kctj_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/kctj_item_icon"
            android:text="小初高"
            android:textColor="@color/kctj_text_title"
            android:textSize="13sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/kctj_item_bg"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:scaleType="fitXY"
        android:layout_weight="1"/>
        <View
            android:layout_width="8dp"
            android:layout_height="98dp"/>
        <ImageView
            android:id="@+id/kctj_item_bg2"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:scaleType="fitXY"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kctj_item_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kctj_item1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/kctj_text_color"
            android:text=""
            android:gravity="center"
            android:focusable="true"
            android:drawableTop="@drawable/hx_white"/>

        <TextView
            android:id="@+id/kctj_item2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="14sp"
            android:text=""
            android:gravity="center"
            android:focusable="true"
            android:textColor="@color/kctj_text_color"
            android:drawableLeft="@drawable/sx"
            android:drawableTop="@drawable/hx_white"/>

        <TextView
            android:id="@+id/kctj_item3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@color/white"
            android:textColor="@color/kctj_text_color"
            android:text=""
            android:gravity="center"
            android:focusable="true"
            android:drawableLeft="@drawable/sx"
            android:drawableTop="@drawable/hx_white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kctj_item_linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kctj_item4"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/kctj_text_color"
            android:background="@color/white"
            android:text=""
            android:gravity="center"
            android:focusable="true"
            android:drawableTop="@drawable/hx" />

        <TextView
            android:id="@+id/kctj_item5"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:textColor="@color/kctj_text_color"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@color/white"
            android:text=""
            android:gravity="center"
            android:drawableLeft="@drawable/sx"
            android:drawableTop="@drawable/hx"
            android:focusable="true"/>

        <TextView
            android:id="@+id/kctj_item6"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:textColor="@color/kctj_text_color"
            android:text=""
            android:textSize="14sp"
            android:gravity="center"
            android:background="@color/white"
            android:drawableLeft="@drawable/sx"
            android:drawableTop="@drawable/hx"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>
