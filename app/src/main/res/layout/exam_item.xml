<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ggmm_shape">

    <TextView
        android:id="@+id/exam_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="试卷标题"
        android:textSize="16sp"
        android:textColor="@color/personal_header"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/exam_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_title"
        android:text="分类:"
        android:layout_alignStart="@+id/exam_title"
        android:textColor="@color/personal_header"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/exam_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_fl"
        android:text="已做人数:"
        android:layout_alignStart="@+id/exam_title"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
