<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/child_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/child_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_msg"
        android:text="第一次"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_below="@+id/child_view"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/child_num"
        android:layout_below="@+id/child_view"
        android:orientation="vertical">
        <TextView
            android:id="@+id/child_details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="测试详情："
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/child_rate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="正确率："
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/child_exam_details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="正确：   错误："
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
