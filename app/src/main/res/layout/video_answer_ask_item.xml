<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_ask_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/zkw_f" />

            <TextView
                android:id="@+id/video_ask_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/video_ask_img"
                android:text="nickName"
                android:textColor="@color/black_personal_nickname"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/video_ask_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="2018.6.25 11:31"
                android:textColor="@color/gray_personal"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/video_ask_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:text="回答内容"
            android:textColor="@color/personal_header"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
