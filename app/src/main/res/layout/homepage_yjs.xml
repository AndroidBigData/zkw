<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yjs_img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/homepage_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yjs_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/homepage_background" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/yjs_vp"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <RadioGroup
        android:id="@+id/yjs_rg"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/yjs_item1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/yjs_item_selector"
            android:layout_marginRight="3dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/yjs_item2"
            android:layout_marginLeft="3dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:background="@drawable/yjs_item_selector"/>
    </RadioGroup>
</LinearLayout>
