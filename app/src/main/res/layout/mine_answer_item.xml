<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/personal_header_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mine_answer_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/zkw_f" />

            <TextView
                android:id="@+id/mine_answer_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/mine_answer_img"
                android:text="nickName"
                android:textColor="@color/black_personal_nickname"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mine_answer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="2018.6.25 11:31"
                android:textColor="@color/gray_personal"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mine_answer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:text="考研一对一"
            android:textColor="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:background="@color/register_choice_background"
            android:padding="5dp">

            <TextView
                android:id="@+id/mine_answer_content_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickName"
                android:textColor="@color/gray_personal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mine_answer_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/mine_answer_content_nickname"
                android:text="发布于2018.6.25 16:04"
                android:textColor="@color/gray_personal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mine_answer_content_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_answer_content_nickname"
                android:text="提问内容"
                android:textColor="@color/gray_personal"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mine_answer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:text="提问内容"
            android:textColor="@color/gray_personal"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
