<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/class_img"
            android:layout_width="144dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/class_type"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="官方"
            android:textColor="@color/white"
            android:background="@drawable/class_item_text_bg"
            app:layout_constraintStart_toStartOf="@+id/class_img"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考研英语"
            android:textSize="14sp"
            android:textColor="@color/video_introdece_class"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/class_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名师讲解干货"
            android:textColor="@color/search_abs"
            android:textSize="11sp"
            android:layout_weight="1"/>
        <RatingBar
            android:id="@+id/class_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="5"
            android:progressTint="#FC5100"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/class_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30课时  5000人已学习"
            android:textColor="@color/search_classnum"
            android:textSize="8sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
