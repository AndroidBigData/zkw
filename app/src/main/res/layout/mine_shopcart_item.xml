<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/personal_header_bg">
        <CheckBox
            android:id="@+id/shopcard_checkbok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:checked="false"/>
        <ImageView
            android:id="@+id/shopcard_img"
            android:layout_width="150dp"
            android:layout_height="86dp"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/shopcard_classname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考研英语"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/shopcard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥5938.00"
                android:textColor="@color/text_color_gray"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/shopcard_classtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100课时，时长4500分钟"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
