<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/personal_header_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/order_cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="考研一对一"
                android:textColor="@color/black_personal_nickname"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_ispay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="￥ 5968.00"
            android:textColor="@color/gray_personal"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/order_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="订单编号：6666666666666666666"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/order_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="创建时间：2018.6.21 16:43"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/order_paytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="支付时间：2018.6.21 ：16:43"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/order_payway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:text="支付方式：支付宝支付"
            android:textColor="@color/text_gray"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
