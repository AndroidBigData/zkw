<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ggmm_shape"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/text_collection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/text_collection_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="10dp">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/text_collection_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/text_collection_exam_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="试卷名称"
            android:textSize="12sp"
            android:textColor="@color/text_color_gray"
            android:layout_toStartOf="@+id/text_collection_addtime"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/text_collection_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传时间"
            android:textSize="12sp"
            android:textColor="@color/text_color_gray"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_collection_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/register_choice_background"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/text_collection_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确答案："
            android:textColor="@color/personal_header"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/text_collection_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/personal_header"
            android:text="解析："
            android:layout_below="@+id/text_collection_right"/>
        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/text_collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/personal_header"
            android:text="具体解析"
            android:layout_toEndOf="@+id/text_collection_item_textview"
            android:layout_below="@+id/text_collection_right"/>
    </RelativeLayout>
</LinearLayout>
