<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ggmm_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exam_dialog_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/exam_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exam_dialog_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exam_dialog_one_text"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="层次"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/exam_dialog_one_sipnner"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:dropDownVerticalOffset="26dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exam_dialog_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exam_dialog_two_text"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:text="年级"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/exam_dialog_two_sipnner"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:dropDownVerticalOffset="26dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exam_dialog_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exam_dialog_three_text"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:text="科目"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/exam_dialog_three_sipnner"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:dropDownVerticalOffset="26dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/exam_dialog_up"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bule_shap"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
