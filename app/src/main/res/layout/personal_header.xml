<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/personal_header_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/personal_tx"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/zkw_r"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/personal_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点击登录"
                android:textColor="@color/black_personal_nickname"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/personal_integral"/>
                <TextView
                    android:id="@+id/personal_num"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="66666"
                    android:textColor="@color/gray_personal"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/personal_message"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/personal_message"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/personal_qd"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:text="点此签到"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/personal_signin_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:id="@+id/personal_mine_class"
            android:layout_width="72dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/personal_tx_bg">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:src="@drawable/personal_mine_class"/>
            <TextView
                android:layout_marginTop="15dp"
                android:textSize="14dp"
                android:textColor="@color/personal_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的课程"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/personal_mine_note_book"
            android:layout_width="72dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/personal_tx_bg">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/personal_mine_notebook"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/personal_header"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的笔记"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/personal_mine_error"
            android:layout_width="72dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/personal_tx_bg">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/personal_mine_error"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/personal_header"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的题库"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/personal_mine_sc"
            android:layout_width="72dp"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/personal_tx_bg">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/persional_mine_sc"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/personal_header"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
