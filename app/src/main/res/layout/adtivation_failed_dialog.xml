<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/ggmm_shape">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/failed_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="请确认卡号或密码输入正确"
                    android:layout_marginTop="62dp"/>
                <TextView
                    android:id="@+id/failed_goon"
                    android:layout_width="160dp"
                    android:layout_height="26dp"
                    android:text="重新激活"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/round_blue_shape"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/failed_qx"
                    android:layout_width="160dp"
                    android:layout_height="26dp"
                    android:text="取消"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/round_blue_shape"
                    android:layout_marginTop="14dp"/>

            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/failed_cry"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/failed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激活失败"
            android:textSize="14sp"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:textColor="#FF0100"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/learncard_line_shape"
            android:layout_below="@id/failed_title"
            android:layerType="software"/>
    </RelativeLayout>

</RelativeLayout>
