<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".job.SearchJobDetailsActivity">

    <LinearLayout
        android:id="@+id/search_details_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/search_details_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/title_back_black"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/search_activity_linearlayout"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:scaleType="centerInside"/>
            <EditText
                android:id="@+id/search_details_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/personal_header"
                android:textSize="14sp"
                android:background="@null"
                android:layout_marginEnd="10dp"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:hint="请输入关键字"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/search_details_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_below="@+id/search_details_LinearLayout"/>
    <LinearLayout
        android:id="@+id/search_details_LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:layout_below="@+id/search_details_view1">
        <TextView
            android:id="@+id/search_details_dq"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/jt_down"
            android:gravity="center"
            android:text="区域"
            android:textColor="@color/personal_header"
            android:textSize="12sp"
            android:layout_marginEnd="3dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/search_details_xz"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/jt_down"
            android:gravity="center"
            android:text="薪资"
            android:textColor="@color/personal_header"
            android:textSize="12sp"
            android:layout_marginEnd="3dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/search_details_xl"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/jt_down"
            android:gravity="center"
            android:text="学历"
            android:textColor="@color/personal_header"
            android:textSize="12sp"
            android:layout_marginEnd="3dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/search_details_gl"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/jt_down"
            android:gravity="center"
            android:text="工龄"
            android:textColor="@color/personal_header"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:id="@+id/search_details_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_below="@+id/search_details_LinearLayout2"/>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/search_details_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/register_choice_background"
        android:layout_below="@+id/search_details_view"/>

    <ImageView
        android:id="@+id/search_details_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_data"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>