<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/ggmm_shape"
    android:layout_marginTop="5dp">
    <ImageView
        android:id="@+id/preview_item_img"
        android:layout_width="144dp"
        android:layout_height="88dp"
        android:scaleType="fitXY"
        android:layout_margin="12dp"
        android:src="@drawable/homepage_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="3"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="考研英语"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/video_introdece_class"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/preview_item_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="考研一对一"
            android:textColor="@color/video_introdece_class"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/preview_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥6388.00"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/class_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/preview_item_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价￥1688.00"
                android:textSize="12sp"
                android:textColor="@color/text_gray"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/text_gray"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/preview_item_oldprice"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/preview_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30课时  5000人已学习"
            android:textColor="@color/search_classnum"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>
