<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ggmm_shape"
    android:layout_marginBottom="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
    android:id="@+id/exam_test_hold"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/exam_unhold"
    android:scaleType="centerInside"
    android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/exam_result_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="666666"/>
</LinearLayout>


    <LinearLayout
        android:id="@+id/exam_result_item_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="10dp">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/register_choice_background"
        android:padding="10dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/exam_result_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确答案："
            android:textColor="@color/black"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/exam_result_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="解析："
            android:layout_below="@+id/exam_result_item_right"/>
        <TextView
            android:id="@+id/exam_result_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="具体解析"
            android:layout_toEndOf="@+id/exam_result_item_textview"
            android:layout_below="@+id/exam_result_item_right"/>
    </RelativeLayout>

</LinearLayout>
