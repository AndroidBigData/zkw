<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_choice_background"
    android:orientation="vertical"
    tools:context=".personalcenter.SetUpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/setup_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/title_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/text_color_gray"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mine_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_informationl"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="个人资料设置"
        android:textColor="@color/gray_personal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/setup_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/add_informationl"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="账户安全"
        android:textColor="@color/gray_personal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_informationl"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="退出登录"
        android:textColor="@color/gray_personal"
        android:textSize="14sp" />
</LinearLayout>