<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personalcenter.MineClassActivity"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/mine_class_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/title_back_black"
        android:scaleType="centerInside"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的课程"
        android:layout_centerInParent="true"
        android:textColor="@color/text_color_gray"
        android:textSize="18sp"/>
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/mine_class_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/text_color_gray" />
    <View
        android:id="@+id/mine_class_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/register_choice_background" />
    <android.support.v4.view.ViewPager
        android:id="@+id/mine_class_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>