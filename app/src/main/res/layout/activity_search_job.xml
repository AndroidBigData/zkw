<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".job.SearchJobActivity"
    android:background="@color/register_choice_background"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        layout="@layout/base_title"
        android:id="@+id/search_job_title" />

    <LinearLayout
        android:layout_below="@+id/search_job_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <EditText
            android:id="@+id/search_job_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="请输入关键字"
            android:textSize="14sp"
            android:textColor="@color/personal_header"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/search_job_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cp_icon_clear_all"
            android:scaleType="centerInside"
            android:padding="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search_job_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textColor="@color/text_color_gray"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/job_city_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/job_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/job_city_more"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/personal_header"
            android:hint="请选择"
            android:layout_marginEnd="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_job_hy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/search_job_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行业"
            android:textColor="@color/text_color_gray"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/job_hy_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/job_hy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/job_hy_more"
            android:layout_toEndOf="@+id/search_job_text1"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/personal_header"
            android:hint="请选择"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_job_zy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业"
            android:textColor="@color/text_color_gray"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/job_zy_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/job_zy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/job_zy_more"
            android:layout_toEndOf="@+id/text2"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/personal_header"
            android:hint="请选择"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/search_job"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_bule_shap"
        android:layout_margin="20dp"
        android:text="搜  索"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>