<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/add_informationl">
    <ImageView
        android:id="@+id/personal_item_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/zkw_r"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/personal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/personal_item_img"
        android:layout_marginStart="10dp"
        android:text="66666"
        android:textColor="@color/personal_list"
        android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>
